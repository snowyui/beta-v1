{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true, //require
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom"],
    "module": "NodeNext", // require option
    "moduleResolution": "NodeNext", // require option
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "melt-extract": ["./core/src/index.ts"],
      "melt-extract/_internal": ["./_internal/src/index.ts"],
      "melt-extract/compiler": ["./compiler/src/index.ts"]
    }
  },
  "ts-node": {
    "esm": true, // this option //これのせいかもしれない
    "compilerOptions": {
      "module": "nodenext" // require
    }
  },

  "exclude": ["./**/dist"]
}
